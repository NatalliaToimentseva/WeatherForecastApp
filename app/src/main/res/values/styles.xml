<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/aubrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ds_16</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dm_3</item>
        <item name="android:backgroundTint">@color/card_blue_bg</item>
    </style>

    <style name="ViewPagerStyle">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:layout_marginBottom">@dimen/dm_5</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dm_5</item>
        <item name="android:layout_marginTop">@dimen/dm_5</item>
        <item name="android:layout_marginEnd">@dimen/dm_5</item>
        <item name="android:backgroundTint">@color/card_blue_bg</item>
    </style>

    <style name="ImageBackgroundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.5</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>